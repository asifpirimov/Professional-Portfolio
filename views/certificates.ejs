<%- include('header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Certificates</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
    .card-body {
      min-height: 150px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Certificates</h1>
    
    <div class="row">
      <!-- Certificate 1 -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <img src="/img/download.png" class="card-img-top" alt="Python Certificate">
          <div class="card-body">
            <h5 class="card-title">Python Certificate</h5>
            <p class="card-text">Completed a Python certification covering fundamental concepts like data structures, functions, loops, and error handling.</p>
            <a href="https://www.hackerrank.com/certificates/iframe/c435e2a94e61" class="btn btn-primary">View Certificate</a>
          </div>
        </div>
      </div>
      
      <!-- Certificate 2 -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <img src="/img/CERTIFICATE_LANDING_PAGE~63JD8URN5ABL.jpeg" class="card-img-top" alt="AI Application Development Certificate">
          <div class="card-body">
            <h5 class="card-title">AI Application Development</h5>
            <p class="card-text">Completed IBM's course on developing AI applications using Python and Flask, including machine learning integration.</p>
            <a href="https://www.coursera.org/account/accomplishments/certificate/63JD8URN5ABL" class="btn btn-primary">View Certificate</a>
          </div>
        </div>
      </div>

      <!-- Certificate 3 -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <img src="/img/cs.png" class="card-img-top" alt="Software Engineer Certificate">
          <div class="card-body">
            <h5 class="card-title">Software Engineer Certificate by HackerRank</h5>
            <p class="card-text">Earned a Software Engineer certificate from HackerRank, showcasing expertise in algorithms, data structures, and problem-solving.</p>
            <a href="https://www.hackerrank.com/certificates/iframe/74bd5e48f90b" class="btn btn-primary">View Certificate</a>
          </div>
        </div>
      </div>

      <!-- Certificate 4 -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <img src="/img/sql.png" class="card-img-top" alt="SQL Certificate">
          <div class="card-body">
            <h5 class="card-title">SQL Certificate by HackerRank</h5>
            <p class="card-text">Earned an SQL Certificate from HackerRank, demonstrating proficiency in writing queries, managing databases, and optimizing performance.</p>
            <a href="https://www.hackerrank.com/certificates/iframe/b0ccd5580417" class="btn btn-primary">View Certificate</a>
          </div>
        </div>
      </div>

      <!-- Certificate 5 -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <img src="/img/js.png" class="card-img-top" alt="JavaScript Certificate">
          <div class="card-body">
            <h5 class="card-title">JavaScript Certificate by HackerRank</h5>
            <p class="card-text">JavaScript Certificate from HackerRank, showcasing proficiency in core concepts, problem-solving, and efficient coding skills.</p>
            <a href="https://www.hackerrank.com/certificates/iframe/dcab88dc2ec4" class="btn btn-primary">View Certificate</a>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Include Bootstrap JS (optional if needed for other components) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

